<Project Sdk="Microsoft.NET.Sdk" DefaultTargets="RestoreTestAssetProjects">

  <Target Name="RestoreTestAssetProjects"
          DependsOnTargets="GetProductVersions"
          BeforeTargets="Test">
    <ItemGroup>
      <TestAssetProjectToRestore Include="$(TestAssetsDir)**\*.csproj" />
    </ItemGroup>

    <MSBuild
      Projects="@(TestAssetProjectToRestore)"
      Targets="Restore"
      Properties="
        RestorePackagesPath=
        RestoreNoCache=
        MNAVersion=$(ProductVersion)" />
  </Target>

</Project>
